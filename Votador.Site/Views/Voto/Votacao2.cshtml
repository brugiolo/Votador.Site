@model Votador.Site.Models.VotoViewModel

@{
    ViewData["Title"] = "Votacao";
}

<h1>Votacao</h1>

<h4>VotoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Votacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioEmail" class="control-label"></label>
                <input asp-for="UsuarioEmail" class="form-control" />
                <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.Titulo" class="control-label"></label>
                <input asp-for="Recurso.Titulo" class="form-control" />
                <span asp-validation-for="Recurso.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurso.Descricao" class="control-label"></label>
                <input asp-for="Recurso.Descricao" class="form-control" />
                <span asp-validation-for="Recurso.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control-plaintext" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar meu voto!!" class="btn btn-primary" asp-action="ConfirmarVoto" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
